{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src", 
    "baseUrl": ".",
    "removeComments": true,
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "paths": {
      "../*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "outDir": "./dist",                                   
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
